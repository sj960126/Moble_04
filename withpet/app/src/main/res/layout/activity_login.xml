<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:gravity="top"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/bazzi"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#ffffff"
            android:textSize="50sp" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="330dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:elevation="10dp"
        app:cardCornerRadius="30dp">

        <EditText
            android:id="@+id/loginEt_id"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="email"
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/loginEt_pw"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="90dp"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/loginBtn_login"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150dp"
            android:background="@drawable/btn_effect"
            android:fontFamily="@font/gmarketsans_m"
            android:onClick="btnClick"
            android:text="@string/login"
            android:textColor="#ffff"
            android:textSize="13dp" />


        <Button
            android:id="@+id/loginBtn_join"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="210dp"
            android:background="@drawable/btn_effect"
            android:fontFamily="@font/gmarketsans_m"
            android:onClick="btnClick"
            android:text="@string/join"
            android:textColor="#ffff"
            android:textSize="13dp" />

        <Button
            android:id="@+id/loginBtn_findpw"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="270dp"
            android:background="@drawable/btn_effect"
            android:fontFamily="@font/gmarketsans_m"
            android:onClick="btnClick"
            android:text="비밀번호 찾기"
            android:textColor="#ffff"
            android:textSize="13dp" />
    </androidx.cardview.widget.CardView>
</LinearLayout>
